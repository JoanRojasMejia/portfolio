---
import { Image } from 'astro:assets'
import { books } from '@content/books'
import Grille from '@icons/grille.astro'
import MainLayout from '@layouts/MainLayout.astro'

---

<MainLayout>
  <div class="px-4 pt-[14px] flex flex-col justify-center">
    <div class="relative flex flex-col mb-14">
      <div class="text-center max-w-[500px] m-auto p-6 flex flex-col items-center">
        <h4
          class="inline-block text-3xl mb-3 font-bold tracking-[-1.2px] bg-repeat bg-clip-text bg-100% bg-rainbow-gradient"
          style="-webkit-text-fill-color:transparent"
        >
          Bookshelf
        </h4>
        <p class="text-lg tracking-[-0.28px] leading-[140%]">
          Here are some of my favorite books I've read or have on my bookshelf.
        </p>
        <div class="flex justify-center items-center my-3">
          <Grille className="opacity-20 scale-y-[1] scale-x-[-1]" />
          <span class="w-max flex h-min">
            <Image
              loading="eager"
              class="dark:invert mx-6"
              alt={'dots'}
              src="/three-dots.svg"
              width="35"
              height="35"
            />
          </span>
          <Grille className="opacity-20" />
        </div>
      </div>
      <section class="mt-[15px]">
        <div class="relative mx-auto columns-3 gap-3 p-1">
          {
            books.map((book) => (
              <a
                href={book.url}
                class="relative cursor-default p-4 grid break-inside-avoid"
                target="_blank"
              >
                <div class="relative">
                  <div class="absolute w-[90%] h-[96%] top-[1%] left-4 border-[grey] border rounded-tl-sm rounded-tr-md rounded-br-md rounded-bl-sm bg-white shadow-box-shadow-book" />
                  <div
                    class="leading-[0] relative rounded-tl-sm rounded-tr-md rounded-br-md rounded-bl-sm transition-all duration-300 cursor-pointer hover:shadow-box-shadow-cover-hover"
                    id="book-transition"
                  >
                    <div>
                      <Image
                        loading="eager"
                        src={book.image}
                        alt={book.url}
                        width="200"
                        height="300"
                        class="rounded-tl-sm rounded-tr-md rounded-br-md rounded-bl-sm object-cover"
                      />
                    </div>
                    <div
                      class="absolute w-5 h-full ml-[10px] top-0 transition-all duration-500 z-[5] bg-effect-book border-l-2 border-[#00000010]"
                      id="effect-book"
                    />
                    <div class="w-[90%] h-full absolute rounded-[3px] top-0 right-0 opacity-10 transition-all duration-500 z-[4] bg-light-book" />
                  </div>
                </div>
              </a>
            ))
          }
        </div>
        <!-- {timelineReverse.map((timeline) => <CardTimeline timeline={timeline} />)} -->
      </section>
    </div>
  </div>
</MainLayout>
