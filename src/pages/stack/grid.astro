---
import { Image } from 'astro:assets'
import Grille from '../../icons/grille.astro'
import MainLayout from '../../layouts/MainLayout.astro'
import GridIcon from '../../icons/grid-icon.astro'
import ListIcon from '../../icons/list-icon.astro'
import { technologiesAndFrameworks, tools, devices } from '../../content/tech-stack'
---

<MainLayout>
  <div class="px-4 pt-[14px] flex flex-col justify-center">
    <div class="relative flex flex-col">
      <div class="text-center max-w-[500px] m-auto p-6 flex flex-col items-center">
        <h4
          class="inline-block text-3xl mb-3 font-bold tracking-[-1.2px] bg-repeat bg-clip-text bg-100% bg-text-gradient"
          style="-webkit-text-fill-color:transparent"
        >
          Tech Stack
        </h4>
        <p class="text-lg tracking-[-0.28px] leading-[140%]">
          The following is my on-the-go app stack for designing, coding, managing, entertaining, and
          all...
        </p>
        <div class="flex justify-center items-center my-3">
          <Grille className="opacity-20 scale-y-[1] scale-x-[-1]" />
          <span class="w-max flex h-min">
            <Image
              loading="eager"
              class="invert mx-6"
              alt={'dots'}
              src="/three-dots.svg"
              width="35"
              height="35"
            />
          </span>
          <Grille className="opacity-20 " />
        </div>
      </div>
      <section>
        <div
          class="flex justify-center w-fit items-center gap-3 dark:text-[var(--light-gray)] mx-auto mb-6"
        >
          <span class="opacity-40 font-semibold text-xs">Grid</span>
          <div class="flex justify-center w-fit rounded-[22px] p-[2px] bg-[rgba(236,237,238,.15)]">
            <button
              class="flex p-1 rounded-[18px] bg-transparent text-white bg-[#F06844] bg-sunset-gradient cursor-default"
              ><GridIcon /></button
            >
            <a class="flex p-1 rounded-[18px] bg-transparent" href="/stack/list"><ListIcon /></a>
          </div>
          <span class="opacity-40 font-semibold text-xs">List</span>
        </div>
        <h4
          class="text-center mt-10 opacity-70 dark:text-[var(--light-gray)] uppercase tracking-[2px] text-sm px-4 font-semibold"
        >
          languages and frameworks
        </h4>
        <div class="relative mt-3 mx-auto grid gap-2 p-1 w-fit grid-cols-5">
          {
            technologiesAndFrameworks.map((tech) => (
              <div
                class="relative cursor-pointer p-4 flex items-center before:rounded-lg before:block before:absolute before:-z-10 before:inset-[-2px] before:opacity-0 before:scale-75
                hover:transition-all hover:duration-300 before:hover:opacity-90 before:hover:scale-100 before:hover:transition-all before:hover:duration-300 before:hover:bg-hover-background"
              >
                <Image
                  loading="eager"
                  src={tech.logo}
                  alt={tech.name}
                  width="60"
                  height="60"
                  class="rounded-lg size-[60px]"
                />
              </div>
            ))
          }
        </div>
        <h4
          class="text-center mt-10 opacity-70 dark:text-[var(--light-gray)] uppercase tracking-[2px] text-sm px-4 font-semibold"
        >
          Tools
        </h4>
        <div class="relative mt-3 mx-auto grid gap-2 p-1 w-fit grid-cols-5">
          {
            tools.map((tool) => (
              <div
                class="relative cursor-pointer p-4 flex items-center before:rounded-lg before:block before:absolute before:-z-10 before:inset-[-2px] before:opacity-0 before:scale-75
                hover:transition-all hover:duration-300 before:hover:opacity-90 before:hover:scale-100 before:hover:transition-all before:hover:duration-300 before:hover:bg-hover-background"
              >
                <Image
                  loading="eager"
                  src={tool.logo}
                  alt={tool.name}
                  width="60"
                  height="60"
                  class="rounded-lg size-[60px]"
                />
              </div>
            ))
          }
        </div>
        <h4
          class="text-center mt-10 opacity-70 dark:text-[var(--light-gray)] uppercase tracking-[2px] text-sm px-4 font-semibold"
        >
          Devices
        </h4>
        <div class="relative mt-3 mx-auto grid gap-2 p-1 w-fit grid-cols-5">
          {
            devices.map((device) => (
              <div
                class="relative cursor-pointer p-4 flex items-center before:rounded-lg before:block before:absolute before:-z-10 before:inset-[-2px] before:opacity-0 before:scale-75
                hover:transition-all hover:duration-300 before:hover:opacity-90 before:hover:scale-100 before:hover:transition-all before:hover:duration-300 before:hover:bg-hover-background"
              >
                <Image
                  loading="eager"
                  src={device.logo}
                  alt={device.name}
                  width="60"
                  height="60"
                  class="rounded-lg size-[60px]"
                />
              </div>
            ))
          }
        </div>
      </section>
    </div>
  </div>
</MainLayout>
