---
import { Image } from 'astro:assets'
import CardProject from '../components/card-project.astro'
import { MarqueeDemo } from '../components/prueba'
import { projects } from '../content/projects'
import RowLink from '../icons/row-link.astro'
import MainLayout from '../layouts/MainLayout.astro'
import Mail from '../icons/mail.astro'
import Linkedin from '../icons/linkedin.astro'

// import { MarqueeDemo } from '../components/prueba'
// import Layout from '../layouts/Layout.astro'
// import NavBar from '../components/navbar.astro'
---

<MainLayout>
  <div class="px-4 pt-4 flex flex-col justify-center">
    <section class="flex items-center gap-4">
      <Image
        class="w-28 h-28 rounded-full"
        width="150"
        height="150"
        loading="eager"
        src="/joan.webp"
        alt="joan-rojas"
      />
      <div class="font-medium dark:text-white text-xl flex flex-col gap-1">
        <div>Joan Rojas Mejia</div>
        <a href="https://www.linkedin.com/in/joan-rojas-mejia/" class="flex flex-row items-center">
          <span class="text-base text-gray-500 dark:text-[var(--light-gray)]"
            >@joan-rojas-mejia</span
          >
          <span class="text-[var(--light-gray)] scale-75">
            <RowLink />
          </span>
        </a>
        <!-- <div class="text-sm text-gray-500 dark:text-gray-400">Joined in August 2014</div> -->
      </div>
    </section>
    <section class="pt-8">
      <p class="text-xl text-pretty font-normal">
        I'm a software engineer with experience in web development, I have worked with different
        technologies and programming languages, I have experience in the development of web
        applications, APIs, and mobile applications.
      </p>
    </section>
    <div class="pt-4">
      <MarqueeDemo client:load />
    </div>
    <section class="mt-14">
      <div class="flex flex-row justify-between items-center">
        <h6
          class="dark:text-[var(--light-gray)] uppercase text-sm opacity-70 tracking-[2px] font-semibold"
        >
          Current Projects
        </h6>
        <a
          href="/work"
          class="dark:text-[var(--light-gray)] text-xs font-semibold capitalize bg-text-sky-gradient bg-clip-text bg-repeat bg-100%"
          style="-webkit-text-fill-color:transparent">All Works â–¸</a
        >
      </div>
    </section>
    <section class="pt-5">
      <div class="flex flex-col items-center justify-center">
        <div class="relative grid gap-[14px] mt-[6px] p-1 grid-cols-3 scale-[1.04]">
          {projects.map((project) => <CardProject project={project} />)}
        </div>
      </div>
    </section>
    <section class="mt-11 mb-40">
      <div class="bg-hover-background flex rounded-[20px] items-center p-4">
        <div class="p-8 z-10">
          <h2
            class="font-semibold bg-repeat bg-clip-text bg-100% bg-text-gradient text-4xl tracking-tight"
            style="-webkit-text-fill-color:transparent"
          >
            Contact me!
          </h2>
          <div class="flex mt-3 gap-6">
            <a
              href="mailto:sebas.rojas.mejia@gmail.com?subject=Saying Hello!!!"
              class="flex items-center gap-2 font-medium bg-repeat bg-clip-text bg-100% bg-text-gradient text-[var(--retro-2c)]"
              style="-webkit-text-fill-color:transparent"
            >
              <Mail />
              hi@joan.me
            </a>
            <a
              href="https://twitter.com/@realvjy"
              class="flex items-center gap-2 font-medium bg-repeat bg-clip-text bg-100% bg-text-gradient text-[var(--retro-2c)]"
              style="-webkit-text-fill-color:transparent"
            >
              <Linkedin />
              Joan Rojas
            </a>
          </div>
          <p class="my-5 font-normal text-xl tracking-[-0.3px] opacity-80 max-w-80">
            Want to create something awesome? Or, you have any query? Drop an email or tweet.
          </p>
          <div class="sc-8ee31b1f-14 eKRTPi design">
            <ul>
              <li>
                <a href="https://airtable.com/shrbOEuombdqwlRUp" class="design-pur">
                  Send Design Proposal</a
                >
              </li>
            </ul>
          </div>
        </div>
        <div class="text-right z-auto">
          <img class="h-72 -m-2 scale-[1.2] translate-y-[18px]" src="/chat.png" />
        </div>
      </div>
    </section>
  </div>
</MainLayout>
