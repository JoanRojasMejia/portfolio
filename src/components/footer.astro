---
import Grille from '../icons/grille.astro';


---

<section class="mt-32 flex flex-col items-center gap-2">
  <h5
    class="leading-8 opacity-80 text-base font-medium dark:text-[var(--light-gray)] tracking-[-0.25px]"
  >
    ©joan
    <span class="text-[10px] mx-[2px] opacity-50">✦</span>
    joan rojas mejia
  </h5>
  <ul class="flex flex-row gap-4 justify-center">
    <li>
      <a
        href="/timeline"
        class="text-[13px] font-medium opacity-40 hover:opacity-85 transition-all duration-300 dark:text-[var(--light-gray)]"
      >
        timeline
      </a>
    </li>
    <li>
      <a
        href="/about"
        class="text-[13px] font-medium opacity-40 hover:opacity-85 transition-all duration-300 dark:text-[var(--light-gray)]"
      >
        about
      </a>
    </li>
    <li>
      <a
        href="/stack/grid"
        class="text-[13px] font-medium opacity-40 hover:opacity-85 transition-all duration-300 dark:text-[var(--light-gray)]"
      >
        tech stack
      </a>
    </li>
    <li>
      <a
        href="/bookshelf"
        class="text-[13px] font-medium opacity-40 hover:opacity-85 transition-all duration-300 dark:text-[var(--light-gray)]"
      >
        bookshelf
      </a>
    </li>
  </ul>
</section>
<section class="py-32 flex flex-row items-center justify-center gap-4 opacity-40">
  <Grille className="opacity-20 scale-y-[1] scale-x-[-1]" />
  <span class="w-max leading-4 text-sm font-medium opacity-60">stay hungry, stay foolish</span>
  <Grille className="opacity-20 " />
</section>
